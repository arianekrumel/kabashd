<div class="row">
  <div class="col-md-8">
    <h1>Story</h1>
    <%= render 'shared/alert_completed_task' %>
    <%= render 'shared/alert_failed_task' %>
    <%= render 'shared/alert_game_over' %>
    <%= render 'shared/alert_won_game' %>
    <div class="container-fluid">

      <%= render 'shared/query_form' %>

      <div class="container-fluid" id="queryarea">
        <% @conversations.each do |conversation| %>
            <div class="conv_entry">
                <p><%= conversation.query %></p>
                <% if conversation.response != nil %>
                    <p class="responseSuccess"><%= conversation.response %></p>
                <% else %>
                    <p class="responseFail">Sorry, there is no valid response for your query.</p>
                <%end%>
            </div>
        <% end %>
      </div>

    </div>
  </div>

  <div class="col-md-4">
    <h1>Watson</h1>
    <form>
      <div class="input-group">
        <input class="form-control" id="query" name="query" placeholder="Enter a question..." type="text" value="">
        <div class="input-group-btn">
        <input class="btn btn-default" name="commit" type="submit" value="Go!">
        <input id="game_id" name="game_id" type="hidden" value="2">
        </div>
      </div>
    </form>
  </div>
</div>