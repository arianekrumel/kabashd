<!DOCTYPE html>
<html>
    <head>
        <title>Kabashd</title>
        <%= favicon_link_tag 'kabashdicon.png' %>
        <script src="https://code.jquery.com/jquery-2.2.0.min.js"/>

        <!-- Latest compiled and minified JavaScript -->
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js" integrity="sha384-0mSbJDEHialfmuBBQP6A4Qrprq5OVfW37PRR3j5ELqxss1yVqOtnepnHVP9aJ7xS" crossorigin="anonymous"></script>
        <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
        <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
        <%= csrf_meta_tags %>
        <!-- Latest compiled and minified CSS -->
    </head>

    <body id="GamesController" class="container">
        <header>
            <%= render 'shared/header' %>
        </header>
        <div class="panel panel-primary chat-panel">
          <div class="panel-heading chat-heading">
            <a href="/games/new"><i class="glyphicon glyphicon-plus" style="float:right"></i></a>
            <h3>Story</h3>
          </div>
          <div class="panel-body chat-body">
            <%= yield %>
          </div>
          <div class="panel-footer">
            <%= render 'shared/query_form' %>
          </div>
        </div>
    </body>
</html>
