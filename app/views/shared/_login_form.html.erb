<!-- Creates the form that allows a user to log in to the site -->
<div class="row">
  <div class="col-md-8 col-md-offset-2 jumbotron" id="login">
    <h1>Log in</h1>
    <p>New user? <%= link_to "Sign up now!", '/users/new', method:"get" %></p>

    <%= form_for(:session, url: '/sessions/create', method:"post",  html: {id:"new_session"} ) do |f| %>
      <div class="login_content" >
        <div class="row">
          <div class="col-xs-8">
            <%= f.email_field :email, :class=>'form-control', :placeholder => "E-mail" %>
          </div>
        </div>
      </div>

      <div class="login_content">
        <div class="row">
          <div class="col-xs-8">
            <%= f.password_field :password, :class=>'form-control', :placeholder => "Password" %>
          </div>
        </div>
      </div>

      <div class="login_content">
        <%= f.submit "Sign in", :class=>'btn btn-default' %>
      </div>
    <% end %>

    <!-- If log in information is not valid, this notifies to the user to try again or to sign up for a free account -->
    <table>
      <tr>
        <td> <%= @err %> </td>
      </tr>
    </table>
  </div>
</div>