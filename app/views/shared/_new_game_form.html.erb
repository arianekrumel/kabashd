<%= form_for(@game, url: "/games/create", method:"post") do |f| %>


    <%= f.label :name%>
    <%= f.text_field :name%>

    <br>
    <%= hidden_field_tag(:created_at, Date.today.to_datetime) %>
    <%= hidden_field_tag(:user_id, current_user.id) %>
    <%= hidden_field_tag(:time, 0) %>


    <%= f.submit "Start Game"%>
    <br>
<% end %>