<div class="row">
  <div class="col-md-4"></div>
  <div class="col-md-4">
    <h1>Log in</h1>
    <p>New user? <%= link_to "Sign up now!", '/users/new', method:"get" %></p>

    <%= form_for(:session, url: '/sessions/create', method:"post",  html: {id:"new_session", class:"well"} ) do |f| %>
        <div class="form-group">
            <%= f.email_field :email, :class=>'form-control', :placeholder => "E-mail" %>
        </div>

        <div class="form-group">
            <%= f.password_field :password, :class=>'form-control', :placeholder => "Password" %>
        </div>

        <%= f.submit "Sign in", :class=>'btn btn-primary' %>
    <% end %>

    <table>
      <tr>
        <td> <%= @err %> </td>
      </tr>
    </table>
  </div>
  <div class="col-md-4"></div>
</div>