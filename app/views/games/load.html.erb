<div class="container">
  <div class="row">
    <div class="col-md-10 col-md-offset-2 main">
        <h2>Which game would you like to load?</h2>
    
        <% @games.to_a.each do |game| %>
            <%= form_tag({controller: "games", action: "create"}, method: "post", id:"queryForm") do  %>
                <div class="col-md-3" style="padding:10px">
                  <%= submit_tag game.name + ' - ' + game.id.to_s, class:'btn btn-lg btn-primary btn-block load-buttons', style:'background-color: #Error: source does not appear to be markup.; border-color:#0e80ff'%>
                  <%= hidden_field_tag(:loaded_game_id, game.id) %>
                </div>
            <% end %>
        <% end %>
    </div>
  </div>
</div>

<%= render 'shared/sidebar' %>
